<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hpuser.networking.MainActivity">

    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:hint="Registration Number"
        android:textAlignment="center"
        android:id="@+id/rno"
        android:inputType="number"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/space"
        android:layout_below="@id/rno"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="MAC ADDRESS"
        android:textSize="35dp"
        android:id="@+id/mac"
        android:layout_below="@+id/space"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/space1"
        android:layout_below="@id/mac"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@id/space1"
        android:layout_centerHorizontal="true"
        android:onClick="sendshiz"
        android:id="@+id/but"
        android:text="Generate"
        android:textColor="#fff"
        android:textSize="22dp"
        android:background="#0f0b84"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space2"
        android:layout_below="@+id/but"
        />


</RelativeLayout>
